{{yield}}

<div class="container">
  <div class="row">
    <h1 style='text-align:center;'>New Post</h1>
    <div class="col-xs-6 col-xs-offset-3">
      <div class="well">
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title"}}
        </div>
        <div class="form-group">
          <label for="content">Comment</label>
          {{textarea value=content id="content" cols="57" rows="6"}}
        </div>
        <div class="form-group">
          <button class="btn btn-primary" {{action 'saveEntry'}}>Submit</button>
        </div>
      </div>
    </div>
  </div>
</div>
